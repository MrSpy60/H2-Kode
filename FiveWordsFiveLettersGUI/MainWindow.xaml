<Window x:Class="FiveWordsFiveLettersGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FiveWordsFiveLettersGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Word Count Slider -->
        <Slider Name="wordCount" Width="200" Height="30" Minimum="1" Maximum="100" Value="50" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" 
                ValueChanged="wordCount_ValueChanged"/>
        <!-- Word Count Value Display -->
        <TextBlock Name="wordCountValue" Text="50" HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="230,20,0,0" FontSize="16"/>

        <!-- Word Length Slider -->
        <Slider Name="wordLength" Width="200" Height="30" Minimum="1" Maximum="10" Value="5" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,70,0,0" 
                ValueChanged="wordLength_ValueChanged"/>
        
        <!-- Word Length Value Display -->
        <TextBlock Name="wordLengthValue" Text="5" HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="230,70,0,0" FontSize="16"/>

        <!-- Progress Bar for Word Count and Word Length (Max value 26) -->
        <ProgressBar Name="ProgressBar2" Width="300" Height="30" Minimum="0" Maximum="26" Value="0" 
                     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,120,0,0"/>

        <!-- File Picker Button -->
        <Button Name="OpenFileButton" Content="Open File" Width="100" Height="30" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,170,0,0"
                Click="OpenFileButton_Click"/>

        <!-- Run Library Button -->
        <Button Name="RunLibraryButton" Content="Run Library" Width="100" Height="30" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,220,0,0"
                Click="RunLibraryButton_Click"/>

        <!-- Progress Bar for Process (Max value 100) -->
        <ProgressBar Name="ProgressBar" Width="300" Height="30" Minimum="0" Maximum="100" Value="0" 
                     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,270,0,0"/>
    </Grid>
</Window>